# -- CodeTri Notes
notes.codetri.net {
	header -server
	encode gzip

	log {
		output file /var/log/caddy/ct-notes.log
		format json
	}
	# Handle static files specially
	file_server /static/ {
		root /var/www/notes/static
		hide .*
	}

	# Serve the site from the generated notes directory
	file_server {
		root /var/www/notes/generated
		hide .*
	}
}
